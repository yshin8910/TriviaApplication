<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.triviaGame">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
<!--    <uses-feature android:name="android.hardware.type.watch" />-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".animations.NewColorAnimation"
            android:label="NewColorAnimation">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".homePage.ViewLeaderboardActivity" />
        <activity
            android:name=".gametypes.SelectedWrongActivity"
            android:label="@string/title_activity_selected_wrong" />
        <activity android:name=".gametypes.SelectedCorrectActivity" />
        <activity
            android:name=".HomepageActivity"
            android:label="@string/title_activity_homepage" />
        <activity
            android:name=".animations.StartupAnimation"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginAnimation"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".animations.MainScreenAnimation"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".animations.ScoresAnimation"
            android:theme="@style/SplashScreenTheme" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".MultipleChoiceActivity" />
        <activity
            android:name=".ViewMyScoresActivity"
            android:label="@string/title_activity_selected_wrong" />
    </application>

</manifest>